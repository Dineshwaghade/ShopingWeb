                        @Html.ValidationMessageFor(model => model.Role_Name, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.UserStatus, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-6">
                        @Html.DropDownListFor(model => model.UserStatus, new SelectList(Enum.GetValues(typeof(OnlineShopingWeb.Models.UserModel.Status))),
                "Select Status", new { @class = "form-control" })
                        @*@Html.EditorFor(model => model.UserStatus, new { htmlAttributes = new { @class = "form-control" } })*@
                        @Html.ValidationMessageFor(model => model.UserStatus, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Update" class="btn btn-primary" />
                        <a href="@Url.Action("Userlist","Admin")" class="btn btn-primary">Cancel</a>

                    </div>
                </div>
                @if (ViewBag.Success != null)
                {
                    <span class="text-success">@ViewBag.Success </span>
                }

            </div>
